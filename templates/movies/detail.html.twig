{# auth/register.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
  <div class="container">
    <div class="card mb-3 m-5"  style="background-color: #EEE; color: black">
    <div class="row no-gutters">
      <div class="col-md-4">
        <img src="https://image.tmdb.org/t/p/w500/{{movie.poster_path}}" class="card-img" >
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title" >{{movie.title}}</h5>
          <p class="card-text">{{movie.overview}}</p>
          <p class="card-text"><small class="text-muted">Budget :{{movie.budget}}</small></p>
          <p class="card-text"><small class="text-muted">Home Page :{{movie.homepage}}</small></p>
          <p class="card-text"><small class="text-muted">Popularity :{{movie.popularity}}</small></p>
          <p class="card-text"><small class="text-muted">Release date : {{movie.release_date}}</small></p>
          <p class="card-text"><small class="text-muted">Revenu : {{movie.revenue}}</small></p>
          <p class="card-text"><small class="text-muted">Vote average : {{movie.vote_average}}</small></p>
          <p class="card-text"><small class="text-muted">Vote count : {{movie.vote_count}}</small></p>
        </div>
      </div>
    </div>
  </div>
  </div>
{% endblock %}